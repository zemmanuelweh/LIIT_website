{
  "kind": "collectionType",
  "collectionName": "assignments",
  "info": {
    "singularName": "assignment",
    "pluralName": "assignments",
    "displayName": "Assignment",
    "description": "Course assignments and projects"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "dueDate": {
      "type": "datetime",
      "required": true
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    },
    "maxPoints": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "instructions": {
      "type": "richtext"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    }
  }
}