{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial",
    "description": "Student testimonials and success stories"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "program": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "text",
      "required": true
    },
    "rating": {
      "type": "decimal",
      "required": true,
      "min": 1,
      "max": 5
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}