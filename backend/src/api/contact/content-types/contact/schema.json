{
  "kind": "collectionType",
  "collectionName": "contacts",
  "info": {
    "singularName": "contact",
    "pluralName": "contacts",
    "displayName": "Contact",
    "description": "Contact form submissions"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "subject": {
      "type": "enumeration",
      "enum": [
        "admissions",
        "programs",
        "financial-aid",
        "technical-support",
        "general",
        "other"
      ],
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "new",
        "in-progress",
        "resolved"
      ],
      "default": "new"
    },
    "submissionDate": {
      "type": "datetime",
      "default": "2024-01-01T00:00:00.000Z"
    }
  }
}